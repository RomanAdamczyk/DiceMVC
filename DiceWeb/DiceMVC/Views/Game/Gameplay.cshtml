<div id="content">
    <form asp-action="GamePlay" asp-controller="Game" method="post">
        @Html.HiddenFor(h => h.GameId)
        @Html.HiddenFor(h => h.Dices)
        @Html.HiddenFor(h => h.Dices[Model.Lap].Id)
        @Html.HiddenFor(h => h.CurrentPlayer)
        @Html.HiddenFor(h => h.CurrentPlayer.Id)
        @Html.HiddenFor(h => h.Round)
        @Html.HiddenFor(h => h.Lap)
        <table>
            <thead>
                Zaznacz kości do pozostawienia
            </thead>

            @foreach (var dices in Model.Dices)

            {@if (dices.Lap != 0)

                {


                    <tr>
                        <p>Rzut @dices.Lap</p>
                    </tr>
                    <tr>
                        <td>
                            <img src="@Html.DisplayFor(d => dices.Dice1ImgPath)" alt="@Html.DisplayFor(d => dices.Dice1)" width="50%" height="50%" title="Dice1" />
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(d => dices.Dice2ImgPath)" alt="@Html.DisplayFor(d => dices.Dice2)" width="50%" height="50%" title="Dice2" />
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(d => dices.Dice3ImgPath)" alt="@Html.DisplayFor(d => dices.Dice3)" width="50%" height="50%" title="Dice3" />
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(d => dices.Dice4ImgPath)" alt="@Html.DisplayFor(d => dices.Dice4)" width="50%" height="50%" title="Dice4" />
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(d => dices.Dice5ImgPath)" alt="@Html.DisplayFor(d => dices.Dice5)" width="50%" height="50%" title="Dice5" />
                        </td>
                    </tr>
                }

        }
            <tr>
                <td>
                    @Html.CheckBoxFor(it => it.BlockedDices.Dice1IsBlocked)
                </td>
                <td>
                    @Html.CheckBoxFor(it => it.BlockedDices.Dice2IsBlocked)
                </td>
                <td>
                    @Html.CheckBoxFor(it => it.BlockedDices.Dice3IsBlocked)
                </td>
                <td>
                    @Html.CheckBoxFor(it => it.BlockedDices.Dice4IsBlocked)
                </td>
                <td>
                    @Html.CheckBoxFor(it => it.BlockedDices.Dice5IsBlocked)
                </td>
            </tr>
            }

        </table>


        <input type="submit" name="holdDices" value="Wybierz" style="text-align:center" />


    </form>
</div>

<div id="right">
    <Table border="1">
        <th>

            Player
        </th>
        <th>
            Score
        </th>

        @foreach (var player in Model.Players)
        {
            <tr>
                <td>
                    @Html.DisplayFor(pl => player.Name)
                </td>
                <td>
                    @Html.DisplayFor(sc => player.Total)
